#!/bin/sh

# shellcheck source=./setup
## TODO: What happens if $0 have no slashes?  Can that happen?
. "${0%/*}/setup"

# Test that EMACS_BIN is set to emacs if INSIDE_EMACS is set, even if
# EMACS is also set.

env -S -i - \
	EMACS="$fakemacs"            \
	PATH="${0%/*}:$defaultpath"  \
	"$buttercup" --help |
	checkoutput -n1 "buttercup [OPTIONS] [DIRS]"
