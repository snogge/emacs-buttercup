#!/bin/sh

# shellcheck source=./setup
. "${0%/*}/setup"

# Test that EMACS_BIN is set to emacs if INSIDE_EMACS is set, even if
# EMACS is also set.

env -S -i - \
	EMACS="$fakemacs"            \
	INSIDE_EMACS=27.1.0,compile  \
	PATH="${0%/*}:$defaultpath"  \
	BASH_ENV="$BASH_ENV" \
	BASH_XTRACEFD="$BASH_XTRACEFD" \
	KCOV_BASH_COMMAND="$KCOV_BASH_COMMAND" \
	KCOV_BASH_XTRACEFD="$KCOV_BASH_XTRACEFD" \
	PS4="$PS4" \
	"$buttercup" select emacs |
	checkline "$testdir/emacs -batch $defaultargs select emacs"
